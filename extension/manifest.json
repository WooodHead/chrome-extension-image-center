{
  "name": "Center image",
  "version": "0.1.3",
  "permissions": [
    "<all_urls>"
  ],
  "icons": { "64": "icons/64.png"},
  "content_scripts": [
    {
      "matches": [
        "file://*.jpg","file://*.jpeg","file://*.png","file://*.webp","file://*.gif",
        "file://*.JPG","file://*.JPEG","file://*.PNG","file://*.WEBP","file://*.GIF",
        "*://*/*.jpg","*://*/*.jpeg","*://*/*.png","*://*/*.webp","*://*/*.gif",
        "*://*/*.JPG","*://*/*.JPEG","*://*/*.PNG","*://*/*.WEBP","*://*/*.GIF"
      ],
      "css": ["main.css"],
      "js" : ["main.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://i.imgur.com/*.gifv","*://i.imgur.com/*.GIFV"],
      "css": ["gifv.css"],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2
}
